@model TagViewModel
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/PanelLayout.cshtml";
}
<div class="container mt-3">
    <div class="card mx-auto">
        <div class="card-body">
            <div class="form-group">
                <h2>Tags</h2>
                @foreach (var item in Model.tags)
                {
                    <ul>
                        <li><h5>@item.TagName</h5></li>
                    </ul>
                }
            </div>
            <form method="post">
                <div class="form-group">
                    <h2>Tag Update</h2>
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="tag.Id">
                        <option disabled selected value="">Selected Tag</option>
                        @foreach (var item in Model.tags)
                        {
                            <option value="@item.Id">@item.TagName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" asp-for="tag.TagName" placeholder="Tag Name for Update Tag" />
                </div>
                <div class="form-group">
                    <select asp-for="tag.Status" class="form-control">
                        <option value="True">True</option>
                        <option value="False">False</option>
                    </select>
                </div>
                <div class="form-group">
                    <input asp-action="TagUpdate" asp-controller="Panel" class="form-control" type="submit" value="Update" />
                </div><div class="form-group">
                    <input asp-action="TagDelete" asp-controller="Panel" class="form-control" type="submit" value="Delete" />
                </div>
            </form>
            <div asp-validation-summary="All"></div>
        </div>
    </div>
</div>  