@model LoginUser
@{
    ViewData["title"] = "login";
    Layout = "~/views/shared/homelayout.cshtml";
}

<div class="card mx-auto">
    <div class="card-heading mx-auto form-control text-center">
        <h2>LOGIN</h2>
    </div>
    <div class="card-body">
        <form asp-action="Login" asp-controller="Account">
            <div class="form-group">
                <input asp-for="Username" placeholder="Username" class="form-control" />
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" placeholder="Password" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="form-control">Login</button>
            </div>
            <div class="form-group">
                <a asp-controller="Account" asp-action="Register">Register</a>
            </div>
        </form>
        <div asp-validation-summary="All"></div>
    </div>
</div>